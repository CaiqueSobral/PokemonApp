{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es6"],
    "module": "ES2022",
    "moduleResolution": "Node",
    "rootDir": "src",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "ts-node": { "esm": true }
}
